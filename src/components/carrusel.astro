<!-- Carousel -->
<div id="demo" class="carousel slide" data-bs-ride="carousel">    

  <!-- Indicators/dots -->  
  <div class="carousel-indicators">
      <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
      <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
      <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button> 
  </div>      

  <!-- The slideshow/carousel -->    
  <div class="carousel-inner"> 
      <div class="carousel-item active">
          <img src="/public/carrusel imagen.webp" alt="Imagen 1" class="d-block w-100">
      </div>
      <div class="carousel-item">
          <img src="/public/enseñar.webp" alt="Imagen 2" class="d-block w-100">
      </div>
      <div class="carousel-item">
          <img src="/public/verano.webp" alt="Imagen 3" class="d-block w-100">
      </div>
  </div>

  <!-- Left and right controls/icons -->
  <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
  </button>
</div>

<!-- Bootstrap CSS --> 
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

<!-- Bootstrap JS (requiere Popper.js también) -->   
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.0/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script> 

<style>   
/* Asegurarse de que el carrusel ocupe todo el ancho disponible, pero más pequeño */
.carousel {
width: 80%; /* Ajusta el carrusel a un 80% del ancho de la pantalla */
max-width: 100%; /* Asegura que no haya desbordamientos horizontales */
margin: 0 auto; /* Centrar el carrusel si hay espacio adicional */ 
}

/* Ajustar el tamaño de las imágenes dentro del carrusel */
.carousel-inner img { 
width: 100%; /* Ocupa el 100% del ancho disponible */
height: 700px; /* Ajusta la altura de las imágenes */
object-fit: cover; /* Mantiene la proporción de la imagen, sin deformarla */
}

/* Estilo de los botones de control (izquierda y derecha) */
.carousel-control-prev-icon,
.carousel-control-next-icon { 
border-radius: 50%; /* Hacer los botones redondeados */
width: 40px; /* Tamaño más pequeño */   
height: 40px; 
}

/* Botones de control */
.carousel-control-prev,
.carousel-control-next {
background-color: transparent; /* Fondo transparente para los botones */
}

/* Cambio de color al pasar el mouse por encima de los botones de control */
.carousel-control-prev:hover,
.carousel-control-next:hover {
background-color: transparent; /* Fondo transparente para el hover */
}

/* Estilo de los indicadores (los puntitos en la parte inferior) */
.carousel-indicators button {
background-color: #fff; /* Fondo blanco para los puntos */
opacity: 0.5; /* Hacerlos semi-translúcidos */
}

/* Indicador activo */
.carousel-indicators .active {
background-color: #ff6347; /* Color de los puntos activos */
opacity: 1; /* Totalmente opacos para los activos */
}

/* Media Queries para hacer el carrusel más pequeño en pantallas pequeñas */
@media (max-width: 768px) {
/* Carrusel en pantallas pequeñas (móviles o tabletas) */
.carousel {
  width: 95%; /* Asegura que ocupe un 95% del ancho en pantallas pequeñas */
  max-width: 100%;  
}

.carousel-inner img {
  height: 300px; /* Reduce la altura de las imágenes en pantallas pequeñas */
}

.carousel-control-prev-icon,
.carousel-control-next-icon {
  width: 30px; /* Botones más pequeños en pantallas pequeñas */
  height: 30px;
}

.carousel-control-prev,
.carousel-control-next {
  background-color: transparent; /* Fondo transparente para los botones */
}
}

/* Media Queries para dispositivos muy pequeños */
@media (max-width: 480px) {
/* Carrusel en pantallas extremadamente pequeñas (smartphones en modo retrato) */
.carousel {
  width: 100%; /* El carrusel ocupa todo el ancho en pantallas muy pequeñas */
}

.carousel-inner img {
  height: 250px; /* Reduce aún más la altura de las imágenes */
}

.carousel-control-prev-icon,
.carousel-control-next-icon {
  width: 25px; /* Botones aún más pequeños */
  height: 25px;
}
}

/* Estilo para el fondo de la página */
body {
background-color:gray;/* Fondo claro, puedes cambiar el color */
font-family: Arial, sans-serif; /* Tipografía general */
color: gray; /* Color de texto general */
margin: 0; /* Eliminar márgenes por defecto */
padding: 0; /* Eliminar relleno por defecto */
}  
</style>
